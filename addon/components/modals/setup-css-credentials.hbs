<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        <div class="mb-4">
            <div class="flex items-start mb-3">
                <FaIcon @icon="info-circle" class="text-blue-500 mr-3 mt-1" />
                <div>
                    <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-1">Community Solid Server Account Required</h4>
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                        To create pods, we need your CSS account credentials. These will be used once to generate a secure token, then discarded.
                    </p>
                </div>
            </div>
        </div>

        <form>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        CSS Account Email <span class="text-red-500">*</span>
                    </label>
                    <Input 
                        @value={{@options.cssEmail}} 
                        @type="email"
                        placeholder="your-email@example.com"
                        class="form-input w-full"
                        required
                    />
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                        Your Community Solid Server account email (not your Fleetbase email)
                    </p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        CSS Account Password <span class="text-red-500">*</span>
                    </label>
                    <Input 
                        @value={{@options.cssPassword}} 
                        @type="password"
                        placeholder="Enter your CSS password"
                        class="form-input w-full"
                        required
                    />
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                        Your Community Solid Server account password
                    </p>
                </div>

                {{#if @options.error}}
                    <div class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-3">
                        <div class="flex items-start">
                            <FaIcon @icon="exclamation-triangle" class="text-red-400 mr-2 mt-0.5" />
                            <div>
                                <h4 class="text-sm font-medium text-red-800 dark:text-red-200">Setup Failed</h4>
                                <p class="text-sm text-red-700 dark:text-red-300 mt-1">{{@options.error}}</p>
                            </div>
                        </div>
                    </div>
                {{/if}}

                <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4">
                    <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-2 flex items-center">
                        <FaIcon @icon="shield-alt" class="text-green-500 mr-2" />
                        Security & Privacy
                    </h4>
                    <ul class="text-xs text-gray-600 dark:text-gray-400 space-y-1">
                        <li class="flex items-start">
                            <FaIcon @icon="check" class="text-green-500 mr-2 mt-0.5 text-xs" />
                            Your password is transmitted securely and never stored
                        </li>
                        <li class="flex items-start">
                            <FaIcon @icon="check" class="text-green-500 mr-2 mt-0.5 text-xs" />
                            A secure client credentials token is generated and encrypted
                        </li>
                        <li class="flex items-start">
                            <FaIcon @icon="check" class="text-green-500 mr-2 mt-0.5 text-xs" />
                            You only need to do this once
                        </li>
                    </ul>
                </div>

                <div class="bg-blue-50 dark:bg-blue-900 border border-blue-200 dark:border-blue-700 rounded-lg p-3">
                    <div class="flex items-start">
                        <FaIcon @icon="question-circle" class="text-blue-500 mr-2 mt-0.5" />
                        <div class="text-xs">
                            <p class="text-blue-800 dark:text-blue-200 font-medium mb-1">Don't have a CSS account?</p>
                            <p class="text-blue-700 dark:text-blue-300">
                                Create one at <a href="{{@options.serverUrl}}/.account/password/register/" target="_blank" class="underline">{{@options.serverUrl}}/.account/password/register/</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</Modal::Default>
